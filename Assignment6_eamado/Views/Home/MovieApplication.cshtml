@{
    ViewData["Title"] = "Movie Application";
}

@model Assignment6_eamado.Models.ApplicationResponse
<h1>Fill out movie application</h1>

<div> <!--Name below must match the name in the model-->
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select Category</option>
            <!--Printing out the list of majors here -->
            @foreach (Category m in ViewBag.Categories)
            {
                <option value="@m.CategoryID">@m.CategoryName</option> //if you select a category name you are actually selecting that categoryID
            }
        </select>
        <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>

        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>

        </select>

        <button type="submit">Submit Movie</button>


    </form>
</div>